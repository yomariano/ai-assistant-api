# Server
PORT=3000
NODE_ENV=development

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# VAPI
VAPI_API_KEY=your-vapi-api-key
VAPI_ASSISTANT_ID=your-vapi-assistant-id

# Telnyx (for phone number provisioning)
# Get API key from: Mission Control > Auth > API Keys
TELNYX_API_KEY=your-telnyx-api-key
# Voice App ID from: Real-Time > Voice > Voice API Applications
# Set webhook URL to: https://api.vapi.ai/telnyx/inbound_call
TELNYX_VOICE_APP_ID=your-telnyx-voice-app-id

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Dev Mode - set to true to bypass auth with dev user
DEV_MODE=true
DEV_USER_EMAIL=dev@localhost.com

# E2E Mode - set to true to use mock providers for all external services
# This is automatically set when running E2E tests
E2E_MODE=false

# Provider Selection (optional - auto-detected based on NODE_ENV)
# Values: 'telnyx' | 'mock' (telephony), 'vapi' | 'mock' (voice)
# TELEPHONY_PROVIDER=mock
# VOICE_PROVIDER=mock

# Mock Provider Settings (for testing)
# MOCK_DELAY=100        # Simulated network delay in ms
# MOCK_FAILURE_RATE=0   # 0-1 probability of simulated failures

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Payment Links (create in Stripe Dashboard > Payment Links)
# These are the base URLs without query params - user ID will be appended automatically
STRIPE_PAYMENT_LINK_STARTER=https://buy.stripe.com/your_starter_link
STRIPE_PAYMENT_LINK_PRO=https://buy.stripe.com/your_pro_link
STRIPE_PAYMENT_LINK_AGENCY=https://buy.stripe.com/your_agency_link

# Stripe Price IDs (needed to map checkout to plan)
# Get these from Stripe Dashboard > Products after creating products
STRIPE_STARTER_PRICE_ID=price_starter_id
STRIPE_PRO_PRICE_ID=price_pro_id
STRIPE_AGENCY_PRICE_ID=price_agency_id

# Trial Settings
TRIAL_DAYS=7
TRIAL_CALLS=3
